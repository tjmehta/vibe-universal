{
  "name": "vibe-universal",
  "version": "0.1.0",
  "private": true,
  "description": "Universal React monorepo: Next.js 15 + Expo 54 + Convex + Turborepo. Shared UI components, backend, and configs. Web and mobile from one codebase. Claude Code ready.",
  "keywords": [
    "react",
    "react-native",
    "typescript",
    "nextjs",
    "expo",
    "turborepo",
    "monorepo",
    "convex",
    "nativewind",
    "universal-app"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@vibe/web",
    "dev:native": "turbo dev --filter=@vibe/native",
    "build": "turbo build",
    "build:web": "turbo build --filter=@vibe/web",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fix": "pnpm lint:fix && pnpm format",
    "test": "turbo test",
    "test:run": "turbo test:run",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "husky",
    "env:pull:vercel": "pnpm env:pull:vercel:development && pnpm env:pull:vercel:preview && pnpm env:pull:vercel:production",
    "env:pull:vercel:development": "vercel env pull .env.development.local --environment development",
    "env:pull:vercel:preview": "vercel env pull .env.preview.local --environment preview",
    "env:pull:vercel:production": "vercel env pull .env.production.local --environment production",
    "env:pull:convex": "./scripts/convex/env-pull.sh all",
    "env:pull:convex:development": "./scripts/convex/env-pull.sh development",
    "env:pull:convex:preview": "./scripts/convex/env-pull.sh preview",
    "env:pull:convex:production": "./scripts/convex/env-pull.sh production",
    "env:push:convex:development": "./scripts/convex/env-push.sh development",
    "env:push:convex:preview": "./scripts/convex/env-push.sh preview",
    "env:push:convex:production": "./scripts/convex/env-push.sh production",
    "env:verify:convex": "./scripts/convex/env-verify.sh"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "turbo": "^2.5.0",
    "typescript": "~5.8.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  }
}
